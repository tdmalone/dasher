{
  "name": "dasher",
  "version": "0.0.0",
  "description": "A custom home automation dashboard.",
  "homepage": "https://github.com/tdmalone/dasher#readme",
  "repository": "git+https://github.com/tdmalone/dasher.git",
  "author": "Tim Malone <tdmalone@gmail.com>",
  "license": "MIT",
  "scripts": {
    "eslint": "DEBUG=eslint:cli-engine eslint --color --ignore-pattern '/coverage/' --ignore-pattern '/dist/' --ignore-pattern '!.*.js' \"**/*.js\"",
    "stylelint": "stylelint --formatter verbose \"**/*.scss\"",
    "lint": "yarn eslint; yarn stylelint",
    "fix": "yarn eslint --fix; yarn stylelint --fix",
    "test": "jest --verbose --coverage"
  },
  "keywords": [
    "dashboard",
    "automation",
    "home-automation"
  ],
  "jest": {
    "testMatch": [
      "**/tests/**/*.js"
    ]
  },
  "dependencies": {
    "auth0-js": "^9.3.0"
  },
  "devDependencies": {
    "@chromatix/stylelint-config-chromatix": "^0.1.10",
    "css-loader": "^0.28.10",
    "eslint": "^4.8.0",
    "eslint-config-tdmalone": "^0.0.1",
    "jest": "^21.2.1",
    "jest-tobetype": "^1.1.0",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.2",
    "stylelint": "^9.1.1",
    "webpack": "^4.0.1",
    "webpack-cli": "^2.0.9"
  }
}
